# Treasure Hunt Backend - Environment Variables
# Copy to .env and fill in values

# Database (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./treasure_hunt.db

# Groq API - https://console.groq.com
GROQ_API_KEY=your_groq_api_key

# App settings
DEBUG=true
API_PREFIX=/api/v1
UPLOAD_DIR=uploads
PHOTO_MAX_AGE_MINUTES=60

# Sydney bounding box for location validation (optional)
SYDNEY_LAT_MIN=-34.2
SYDNEY_LAT_MAX=-33.6
SYDNEY_LON_MIN=150.5
SYDNEY_LON_MAX=151.4
